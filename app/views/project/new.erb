<h1>Create New Project</h1>

<% if @project.errors.any? %>
  <div>
    <strong>There are some issues with the project creation:</strong>
    <ul>
      <% @project.errors.full_messages.each do |project| %>
        <li><%= project %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form method="post" action ="/projects">
<div class="newproject">
  <div>
    <label>Project Name</label>
    <textarea rows="1" cols="58" name="project_name"></textarea>
  </div>
</div>

<div class="newproject">
  <div>
    <label>Project Idea</label>
    <textarea rows="10" cols="58" name="project_idea"></textarea>
  </div>
</div>

<div class="newproject">
  <div>
    <label>Project Problem</label>
    <textarea rows="10" cols="58" name="project_problem"></textarea>
  </div>
</div>
<br/>
<input class="btn btn-info" type="submit" value="Create New Project">

</form>
