<body>

<% unless current_user %>

<nav class="navbar navbar-light bg-faded">
  <a class="navbar-brand" href="/">Rescue</a>
  <ul class="nav navbar-nav">
    <li class="nav-item active">
      <a class="nav-link" href="/signin">Login<span class="sr-only">(current)</span></a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="/signup">Create Account</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="/projects/index">Project Wall</a>
    </li>
  </ul>
  <div class="form-inline pull-xs-right">
    <form method="GET" action='/search'>
      <input class="form-control" type="text" placeholder="Search" name="query">
      <button class="btn btn-success-outline" type="submit">Search</button>
    </form>
  </div>
</nav>

<% else %>

<nav class="navbar navbar-light bg-faded">
  <a class="navbar-brand" href="/">Rescue</a>
  <ul class="nav navbar-nav">
    <li class="nav-item active">
      <a class="nav-link" href="/signout">Logout<span class="sr-only">(current)</span></a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="/projects/index">Project Wall</a>
    </li>
  </ul>
  <div class="form-inline pull-xs-right">
    <form method="GET" action='/search'>
      <input class="form-control" type="text" placeholder="Search" name="query">
      <button class="btn btn-success-outline" type="submit">Search</button>
    </form>
